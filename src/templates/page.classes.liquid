{% include 'breadcrumbs' %}
{% include 'page-header' %}
<div class="container my-8">
  <div class="sm:flex -m-4">
    <div class="sm:w-1/3 md:w-1/4 p-4">
      <div class="bg-gray-100 p-4">
        <h3>
          Browse<br>Classes
        </h3>
        <ul>
          {% for link in linklists.sidebar-classes.links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="flex-1 p-4">
      <article>
        <header>
          <h1>{{ page.title }}</h1>
        </header>
        {{ page.content }}
      </article>
    </div>
  </div>
</div>