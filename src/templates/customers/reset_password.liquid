{% include 'breadcrumbs' %}
<div class="w-full max-w-lg px-4 my-8 mx-auto">
  <h1 class="text-center">Reset Password</h1>

  {% form 'reset_customer_password' %}
  {{ form.errors | default_errors }}

  <p>
    <label class="text-sm text-gray-500 uppercase" for="password">Password</label>
    <input
      type="password"
      value=""
      name="customer[password]"
      id="customer_password"
      class="form-input w-full"
      size="16"
    />
  </p>

  <p>
    <label class="text-sm text-gray-500 uppercase" for="password_confirmation"
      >Password Confirmation</label
    >
    <input
      type="password"
      value=""
      name="customer[password_confirmation]"
      id="customer_password_confirmation"
      class="form-input w-full"
      size="16"
    />
  </p>

  <p>
    <input class="btn btn--green" type="submit" value="Reset Password" />
  </p>

  {% endform %}
</div>
