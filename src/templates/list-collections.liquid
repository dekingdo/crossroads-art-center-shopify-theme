{% paginate collections by 37 %}

  <header class="text-center py-8">
    <h1>Collections</h1>
  <header>

  <div class="flex justify-center flex-wrap -mx-2">
    {% for collection in collections %}
      {% unless collection.handle == 'all' or collection.handle == 'all-products' or collection.handle == 'frontpage' %}
        <div class="w-1/2 md:w-1/3 lg:w-64 p-2">
          {% include 'content-collection' %}
        </div>
      {% endunless %}
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
  <footer class="flex justify-center py-4">
    {% include 'pagination' %}
  </footer>
  {% endif %}

{% endpaginate %}